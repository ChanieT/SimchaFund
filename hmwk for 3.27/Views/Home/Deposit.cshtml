@*@using Data*@
@model int
@{
    ViewBag.Title = "Deposit";
}

<div class="modal col-md-4 col-md-offset-3" id="addDepositModal">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
                <span class="sr-only">Close</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">New Deposit</h4>
        </div>
        <div class="modal-body">
            <form method="post" action="/home/submitdeposit">
                <h3>Amount</h3>
                <input type="text" name="amount" placeholder="Deposit Amount" />
                <h3>Date</h3>
                <input type="text" name="date" placeholder="03/21/19" />
                <input type="hidden" name="contributorid" value="@Model" />

                <button name="submitdeposit">Submit</button>
            </form>
        </div>
    </div>
</div>



@section scripts {
    <script>
    </script>
    <script src="/Scripts/index.js"></script>
}